generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  DATABASE_URL="file:./dev.db"
}

model Rental {
  id String @id @default(uuid())
  carId String
  userId String
  startDate DateTime
  expectedReturnDate DateTime
  endDate DateTime?
  
  @@map("rentals")
}

model Car {
  id            String   @id @default(uuid())
  name          String
  brand         String
  daily_rate    Float
  license_plate String   @unique
  available     Boolean  @default(true)
  
  @@map("cars")
}